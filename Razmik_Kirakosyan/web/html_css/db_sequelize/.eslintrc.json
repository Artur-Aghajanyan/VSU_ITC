{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
        // "plugin:node/recomended"
    ],
	
    "parserOptions": {
        "ecmaVersion": 12
    },

    "rules": {
        "keyword-spacing": 2,
        "no-multi-spaces": 2,
        "no-mixed-spaces-and-tabs": 2,
        "space-before-blocks": 2,
        "no-regex-spaces": 2,
        "no-spaced-func": 2,
        "space-before-function-paren": 2,
        "no-trailing-spaces": 2,
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 2,
        "spaced-comment": 2,
        "no-irregular-whitespace": 2,
        "no-whitespace-before-property": 2,

        "indent": [2, 4],
    
        "no-multiple-empty-lines": [2, {"max": 1, "maxEOF": 0}],
        
        "semi": 2,
        
        "comma-dangle": 2,
        
        "no-unused-vars": 2,
        "no-unused-expressions": 2,
        
        // "node/no-extraneous-require": 2,
        
        "no-console": 2,
        
        "no-alert": 2,
        
        "no-undef": 2
    }
 }

