{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        //space
        "keyword-spacing": 2,
        "no-multi-spaces": 2,
        "no-mixed-spaces-and-tabs": 2,
        "space-before-blocks": 2,
        "no-regex-spaces": 2,
        "no-spaced-func": 2,
        "space-before-function-paren": 2,
        "no-trailing-spaces": 2,
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 2,
        "spaced-comment": 2,
        "no-irregular-whitespace": 2,
        "no-whitespace-before-property": 2,
        //tab
        "indent": [2, 4],
        //empty row
        "no-multiple-empty-lines": [2, {"max": 1, "maxEOF": 0}],
        //;
        "semi": 2,
        //,
        "comma-dangle": 2,
        //defined but not used
        "no-unused-vars": 2,
        "no-unused-expressions": 2,
        //node/no-extraneous-require
        "node/no-extraneous-require": 2,
        //no-console
        "no-console": 2,
        //no-alert
        "no-alert": 2,
        //no-defined-vars
        "no-undef": 2
    }
}